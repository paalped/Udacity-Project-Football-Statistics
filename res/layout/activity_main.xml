<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.practiceset2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_a"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yellow_card_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_cards_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/shots_on_target_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shots_on_target_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/goals_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_mark"
                    style="@style/StatisticView" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/red_card_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_cards_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/shots_off_target_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shots_off_target_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/switch_mark_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switches_mark"
                    style="@style/StatisticView" />
            </LinearLayout>


            <Button
                android:id="@+id/goal_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/goal"
                android:layout_gravity="center"
                android:onClick="goalA"
                />
            <Button
                android:id="@+id/red_card_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/red_card"
                android:layout_gravity="center"
                android:onClick="redCardA"
                />
            <Button
                android:id="@+id/yellow_card_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/yellow_card"
                android:layout_gravity="center"
                android:onClick="yellowCardA"
                />
            <Button
                android:id="@+id/shots_off_target_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/shot_off_target"
                android:layout_gravity="center"
                android:onClick="shotsOffTargetA"
                />
            <Button
                android:id="@+id/shots_on_target_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/shot_on_target"
                android:layout_gravity="center"
                android:onClick="shotsOnTargetA"
                />
            <Button
                android:id="@+id/switch_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/switches"
                android:layout_gravity="center"
                android:onClick="switchA"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_margin="8sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_b"
                android:layout_gravity="center"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yellow_card_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_cards_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/shots_on_target_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shots_on_target_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/goals_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_mark"
                    style="@style/StatisticView" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/red_card_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_cards_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/shots_off_target_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shots_off_target_mark"
                    style="@style/StatisticView" />
                <TextView
                    android:id="@+id/switch_mark_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switches_mark"
                    style="@style/StatisticView" />
            </LinearLayout>
            <Button
                android:id="@+id/goal_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/goal"
                android:layout_gravity="center"
                android:onClick="goalB"
                />
            <Button
                android:id="@+id/red_card_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/red_card"
                android:layout_gravity="center"
                android:onClick="redCardB"
                />
            <Button
                android:id="@+id/yellow_card_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/yellow_card"
                android:layout_gravity="center"
                android:onClick="yellowCardB"
                />
            <Button
                android:id="@+id/shots_off_target_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/shot_off_target"
                android:layout_gravity="center"
                android:onClick="shotsOffTargetB"
                />
            <Button
                android:id="@+id/shots_on_target_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/shot_on_target"
                android:layout_gravity="center"
                android:onClick="shotsOnTargetB"
                />
            <Button
                android:id="@+id/switch_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/switches"
                android:layout_gravity="center"
                android:onClick="switchB"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_gravity="center"
        android:onClick="sendEmail"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_gravity="center"
        android:onClick="reset"/>
</LinearLayout>
</ScrollView>